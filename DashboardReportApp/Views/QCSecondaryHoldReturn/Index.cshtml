@model DashboardReportApp.Models.QCSecondaryHoldReturnModel

<div class="container mt-4">
    <h1 class="text-center mb-4">QC Secondary Hold Return</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success fade show" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger fade show" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            <form asp-action="Submit" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label for="Operator" class="form-label">Operator</label>
                    <select id="Operator" name="Operator" asp-for="Operator" class="form-control" required>
                        <option value="">Select Operator</option>
                        @foreach (var operatorName in (ViewData["Operators"] as List<string>))
                        {
                            <option value="@operatorName">@operatorName</option>
                        }
                    </select>
                    <span asp-validation-for="Operator" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Run" class="form-label">Run</label>
                    <input type="text" id="Run" name="Run" asp-for="Run" class="form-control" required />
                    <span asp-validation-for="Run" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="QtyReturnedMachined" class="form-label">Qty Returned Machined</label>
                    <input type="number" id="QtyReturnedMachined" name="QtyReturnedMachined" asp-for="QtyReturnedMachined" class="form-control" min="0" step="1" required />
                    <span asp-validation-for="QtyReturnedMachined" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="QtyReturnedNonMachined" class="form-label">Qty Returned Non-Machined</label>
                    <input type="number" id="QtyReturnedNonMachined" name="QtyReturnedNonMachined" asp-for="QtyReturnedNonMachined" class="form-control" min="0" step="1" required />
                    <span asp-validation-for="QtyReturnedNonMachined" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="Notes" class="form-label">Notes</label>
                    <textarea id="Notes" name="Notes" asp-for="Notes" class="form-control text-area-large"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100"><i class="bi bi-send"></i> Submit</button>
            </form>
        </div>
    </div>
</div>

