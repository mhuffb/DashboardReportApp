@model DashboardReportApp.Models.HoldRecord

<h2>Hold Tag</h2>

<form asp-action="Submit" method="post">
    <div>
        <label for="Part">Part</label>
        <input type="text" id="Part" name="Part" required />
    </div>
    <div>
        <label for="Discrepancy">Discrepancy</label>
        <textarea id="Discrepancy" name="Discrepancy" required></textarea>
    </div>
    <div>
        <label for="Quantity">Quantity</label>
        <input type="text" id="Quantity" name="Quantity" required />
    </div>
    <div>
        <label for="Unit">Unit</label>
        <input type="text" id="Unit" name="Unit" required />
    </div>
    <div>
        <label for="IssuedBy">Operator</label>
        <select id="IssuedBy" name="IssuedBy" required>
            <option value="">Select Operator</option>
            @foreach (var operatorName in ViewData["Operators"] as List<string>)
            {
                <option value="@operatorName">@operatorName</option>
            }
        </select>
    </div>
    <button type="submit">Submit</button>
</form>
