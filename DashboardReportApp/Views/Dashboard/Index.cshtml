@{
    <h2>Sales Overview</h2>
    <canvas id="myChart" width="400" height="200"></canvas>

    <script>
        // Get the canvas context
        const ctx = document.getElementById('myChart').getContext('2d');

        // Initialize the chart
        const myChart = new Chart(ctx, {
            type: 'bar', // Chart type (bar, line, pie, etc.)
            data: {
                labels: ['January', 'February', 'March', 'April', 'May'], // X-axis labels
                datasets: [{
                    label: 'Revenue (in $)',
                    data: [1200, 1500, 1800, 2200, 3000], // Y-axis data
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>


}
