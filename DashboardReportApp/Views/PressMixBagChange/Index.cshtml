<script>
    function updateFields() {
        const partSelect   = document.getElementById('partNumber');
        const runHidden    = document.getElementById('RunNumber');
        const compHidden   = document.getElementById('Component');
        const prodHidden   = document.getElementById('ProdNumber');
        const operatorName = document.getElementById('operatorName');
        const machine      = document.getElementById('machine');

        const opt = partSelect.options[partSelect.selectedIndex];
        if (!opt || !opt.value) {
            // Clear everything if no part selected
            runHidden.value  = "";
            compHidden.value = "";
            prodHidden.value = "";
            operatorName.value = "";
            machine.value      = "";
            return;
        }

        // Fill hidden fields from data-* attributes
        runHidden.value  = opt.dataset.run        || "";
        compHidden.value = opt.dataset.component  || "";
        prodHidden.value = opt.dataset.prodnumber || "";

        // Optionally: auto-fill operator/machine from latest run info
        fetch(`/PressMixBagChange/GetRunInfo?part=${encodeURIComponent(opt.value)}&prod=${encodeURIComponent(prodHidden.value)}&run=${encodeURIComponent(runHidden.value)}`)
            .then(r => r.json())
            .then(data => {
                if (data.op)   { operatorName.value = data.op; }
                if (data.mach) { machine.value      = data.mach; }
            })
            .catch(() => { /* ignore lookup errors */ });
    }

    document.addEventListener('DOMContentLoaded', () => {
        // If a part is already selected when the modal opens (e.g., browser remembers),
        // make sure hidden fields match.
        const partSelect = document.getElementById('partNumber');
        if (partSelect && partSelect.value) {
            updateFields();
        }
    });
</script>
