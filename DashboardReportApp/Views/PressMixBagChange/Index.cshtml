<script>
      function updateFields() {
      const partNumber   = document.getElementById('partNumber');
      const RunNumber    = document.getElementById('RunNumber');
      const Component    = document.getElementById('Component');
      const ProdNumber   = document.getElementById('ProdNumber');
      const operatorName = document.getElementById('operatorName');
      const machine      = document.getElementById('machine');

      const opt = partNumber.options[partNumber.selectedIndex];
      if (!opt) return;

      RunNumber.value  = opt.dataset.run        || "";
      Component.value  = opt.dataset.component  || "";
      ProdNumber.value = opt.dataset.prodnumber || "";

      fetch(`/PressMixBagChange/GetRunInfo?part=${opt.value}&prod=${ProdNumber.value}&run=${RunNumber.value}`)
        .then(r => r.json())
        .then(data => {
          operatorName.value = data.op || "";
          machine.value      = data.mach || "";
        });
    }



   
          const raw = document.getElementById('mixBagChangeTableRoot').dataset.records || "[]";
    const data = JSON.parse(raw);

    // Map booleans/ints to a friendly string + optional badge
    data.forEach(r => {
      const v = r.IsOverride;
      const isTrue = v === true || v === 1 || v === "1";
      const isFalse = v === false || v === 0 || v === "0";

      // Choose one of these display styles:

      // 1) Simple Yes/No:
      r.IsOverrideDisplay = isTrue ? "Yes" : (isFalse ? "No" : "");


      // Make dates pretty
      if (r.SentDateTime)  r.SentDateTime  = new Date(r.SentDateTime).toLocaleString();
      if (r.OverrideAt)    r.OverrideAt    = new Date(r.OverrideAt).toLocaleString();
    });

    const cols = [
      {key:'Id',label:'ID'},
      {key:'Part',label:'Part'},
      {key:'Component',label:'Component'},
      {key:'ProdNumber',label:'Production Number'},
      {key:'Run',label:'Run'},
      {key:'Operator',label:'Operator'},
      {key:'Machine',label:'Machine'},
      {key:'LotNumber',label:'Lot Number'},
      {key:'MaterialCode',label:'Material Code'},
      {key:'WeightLbs', label:'Weight (lbs)'},
      {key:'BagNumber',label:'Bag #'},
      {key:'SentDateTime',label:'Sent Time'},
      {key:'Notes',label:'Notes'},

      // Use the display field instead of the raw boolean:
      {key:'IsOverrideDisplay', label:'Override?'},
      {key:'OverrideBy', label:'Supervisor'},
      {key:'OverrideAt', label:'Override Time'}
    ];

    window.renderMyDataTable?.("mixBagChangeTableRoot", data, cols, true);
    });

  
</script>
<script>
    document.addEventListener('DOMContentLoaded', () => {
      // 1) SHARED CONSTANTS
      const previewByType = {
        advantage: "/img/advantage-highlight.jpg",
        hoganas:   "/img/hoganas-highlight.jpg",
        hoeganaes: "/img/hoeganaes-highlight.jpg",
        sintergy:  "/img/sintergy-highlight.jpg"
      };
      const advantageLike = new Set(["advantage","sintergy"]);

      // 2) STATE
      let selectedType = "";
      let tempScan1 = "";

      // 3) ELEMENTS
      const labelStep   = document.getElementById('labelStep');
      const scanStep    = document.getElementById('scanStep');
      const formStep    = document.getElementById('formStep');
      const submitBtn   = document.getElementById('submitBtn');
      const labelPrev   = document.getElementById('labelPreview');
      const in1         = document.getElementById('barcodeInput1');
      const in2         = document.getElementById('barcodeInput2');

      const lot = document.getElementById('LotNumber');
      const mat = document.getElementById('MaterialCode');
      const wgt = document.getElementById('WeightLbs');
      const bag = document.getElementById('BagNumber');

      // 4) CLICK HANDLERS FOR LABELS
      document.querySelectorAll('.label-img').forEach(img => {
        img.addEventListener('click', () => {
          selectedType = img.dataset.type;

          labelStep.classList.add('d-none');
          scanStep.classList.remove('d-none');

          in1.value = ""; in2.value = "";
          in2.classList.add('d-none');

          labelPrev.src = previewByType[selectedType] || "";

          if (selectedType === "hoeganaes") {
            in2.classList.remove('d-none');
          }

          in1.focus();
        });
      });

      // 5) SCAN #1
      in1.addEventListener('keydown', (e) => {
        if (e.key !== 'Enter') return;
        e.preventDefault();
        const val = in1.value.trim();

        // Advantage-like (Advantage + Sintergy)
        if (advantageLike.has(selectedType)) {
          // expected: [ignored];[mat];[lot];[wgt];[bag]
          const p = val.split(';');
          mat.value = p[1] || "";
          lot.value = p[2] || "";
          wgt.value = p[3] || "";
          bag.value = p[4] || "";
          gotoForm();
          return;
        }

           // Hoganas
    if (selectedType === "hoganas") {
      const b = val.slice(6, 13);   // lot
      const c = val.slice(14, 17);  // kg
      const d = val.slice(17, 20);  // bag

      lot.value = b;
      wgt.value = Math.round(parseFloat(c) * 2.20462).toFixed(2);
      bag.value = d;

      fetch(`/PressMixBagChange/GetMaterialCodeByLot?lot=${encodeURIComponent(b)}`)
        .then(r => r.text())
        .then(code => {
          console.log("Hoganas lot lookup", b, "=>", code);
          if (!code) {
            Swal.fire({
              icon: 'error',
              title: 'No Material Code Found',
              text: `No materialCode found in powdermix for lot ${b}.`
            });
            return;
          }

          mat.value = code;
          gotoForm();
        })
        .catch(err => {
          console.error("Error fetching material code for Hoganas", err);
          Swal.fire({
            icon: 'error',
            title: 'Lookup Error',
            text: 'Could not look up material code for this lot.'
          });
        });

      return;
    }


        // Hoeganaes (needs second scan)
        if (selectedType === "hoeganaes") {
          tempScan1 = val;
          in2.focus();
        }
      });

        // 6) SCAN #2 (Hoeganaes)
    in2.addEventListener('keydown', (e) => {
      if (e.key !== 'Enter') return;
      e.preventDefault();
      const val = in2.value.trim();

      if (selectedType === "hoeganaes") {
        const lt = tempScan1.slice(0, 10);   // lot
        const bg = tempScan1.slice(10, 14);  // bag
        lot.value = lt;
        bag.value = bg;
        wgt.value = parseFloat(val.replace(/[^0-9.]/g, "")).toFixed(2);

        fetch(`/PressMixBagChange/GetMaterialCodeByLot?lot=${encodeURIComponent(lt)}`)
          .then(r => r.text())
          .then(code => {
            console.log("Hoeganaes lot lookup", lt, "=>", code);
            if (!code) {
              Swal.fire({
                icon: 'error',
                title: 'No Material Code Found',
                text: `No materialCode found in powdermix for lot ${lt}.`
              });
              return;
            }

            mat.value = code;
            gotoForm();
          })
          .catch(err => {
            console.error("Error fetching material code for Hoeganaes", err);
            Swal.fire({
              icon: 'error',
              title: 'Lookup Error',
              text: 'Could not look up material code for this lot.'
            });
          });
      }
    });


      // 7) NAV + FORM
      document.getElementById('backToLabelsBtn').addEventListener('click', () => {
        scanStep.classList.add('d-none');
        labelStep.classList.remove('d-none');
        in1.value = ""; in2.value = "";
        in2.classList.add('d-none');
        tempScan1 = "";
      });

      function gotoForm() {
        scanStep.classList.add('d-none');
        formStep.classList.remove('d-none');
        submitBtn.classList.remove('d-none');
      }
    });
</script>
