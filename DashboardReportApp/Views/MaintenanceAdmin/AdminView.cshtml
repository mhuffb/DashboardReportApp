
@model IEnumerable<DashboardReportApp.Models.MaintenanceRequestModel>
@using System.Text.Json;
<div class="container-fluid px-3 mt-4">
    <h1 class="text-center mb-4">Admin - Maintenance Requests</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }



    @{
        var operators = ViewBag.OperatorNames as List<string> ?? new List<string>();
    }

    

        <div id="maintenanceRequestsReactRoot"></div>

        <script>
            window.maintenanceRequests = @Html.Raw(JsonSerializer.Serialize(Model));
            window.operators = @Html.Raw(JsonSerializer.Serialize(ViewBag.OperatorNames));
        </script>

        <script src="/js/mydatatable.bundle.js"></script>
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                if (window.renderMyMaintenanceTable) {
                    window.renderMyMaintenanceTable("maintenanceRequestsReactRoot", window.maintenanceRequests, window.operators);
                } else {
                    console.error("window.renderMyMaintenanceTable is not defined!");
                }
            });
        </script>
    




</div>



