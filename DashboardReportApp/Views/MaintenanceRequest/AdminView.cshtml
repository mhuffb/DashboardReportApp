@{
}
@model IEnumerable<DashboardReportApp.Models.MaintenanceRequestModel>

@{
    ViewData["Title"] = "Admin - Edit Maintenance Requests";
}

<h1>Admin - Edit Maintenance Requests</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Timestamp</th>
            <th>Equipment</th>
            <th>Requester</th>
            <th>Problem</th>
            <th>Machine Down</th>
            <th>Hour Meter</th>
            <th>Department</th>
            <th>File</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model)
        {
            <tr>
                <form asp-action="UpdateRequest" method="post">
                <td><input type="text" name="Id" value="@request.Id" readonly class="form-control"></td>
                <td><input type="datetime-local" name="Timestamp" value="@request.Timestamp?.ToString("yyyy-MM-ddTHH:mm")" class="form-control"></td>
                <td><input type="text" name="Equipment" value="@request.Equipment" class="form-control"></td>
                <td><input type="text" name="Requester" value="@request.Requester" class="form-control"></td>
                <td><input type="text" name="Problem" value="@request.Problem" class="form-control"></td>
                <td>
                    <input type="checkbox" name="DownStatus" value="true" @(request.DownStatus == true ? "checked" : "") />
                </td>
                <td><input type="number" name="HourMeter" value="@request.HourMeter" class="form-control"></td>
                <td><input type="text" name="Department" value="@request.Department" class="form-control"></td>
                <td>
                        @if (!string.IsNullOrEmpty(request.FileAddressMediaLink))
                        {
                        <a href="@request.FileAddressMediaLink" target="_blank">View File</a>
                        }
                        else
                        {
                        <span>No File</span>
                        }
                </td>
                <td>
                    <button type="submit" class="btn btn-primary">Save</button>
                </td>
                </form>
            </tr>
        }
    </tbody>
</table>
