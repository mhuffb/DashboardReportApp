                    var startEl = document.getElementById('startBagNo');
                    var qtyEl = document.getElementById('labelQty') || document.getElementById('totalQty');

                    var mix = (mixEl && mixEl.value ? mixEl.value : '').trim();
                    var lot = (lotEl && lotEl.value ? lotEl.value : '').trim();
                    var wt = (wtEl && wtEl.value ? wtEl.value : '').trim();
                    var start = startEl ? parseInt(startEl.value || '1', 10) : 1;
                    var qty = qtyEl ? parseInt(qtyEl.value || '1', 10) : 1;

                    var problems = [];
                    if (!mix) problems.push('Mix Code');
                    if (!lot) problems.push('Lot Number');
                    if (!wt) problems.push('Weight per Bag/Drum');
                    if (!isFinite(start) || start < 1) problems.push('Starting Bag # ≥ 1');
                    if (!isFinite(qty) || qty < 1) problems.push('Number of labels ≥ 1');

                    if (problems.length) {
                        if (window.Swal && Swal.fire) {
                            Swal.fire({
                                icon: 'warning',
                                title: 'Missing or invalid',
                                html: '<ul class="text-start"><li>' + problems.join('</li><li>') + '</li></ul>'
                            });
                        } else {
                            alert('Missing/invalid: ' + problems.join(', '));
                        }
                        return;
                    }

                    var grid = document.getElementById('qrGrid') || document.getElementById('qrContainer');
                    if (!grid) {
                        console.warn('[MixQR] #qrGrid/#qrContainer not found');
                        return;
                    }

                    clearPreview();

                    var firstPayload = null;

                    for (var i = 0; i < qty; i++) {
                        var bag = start + i;
                        var result = await makeLabeledImage({ mix: mix, lot: lot, wt: wt, bag: bag });

                        if (!firstPayload) firstPayload = result.payload;

                        var col = document.createElement('div');
                        col.className = 'col-auto d-flex justify-content-center';

                        var img = document.createElement('img');
                        img.src = result.dataUrl;
                        img.alt = 'Label for bag ' + bag;
                        img.style.width = '360px';
                        img.style.height = 'auto';
                        img.className = 'mixqr-label-img';
                        img.dataset.bag = String(bag);

                        col.appendChild(img);
                        grid.appendChild(col);
                    }

                    var prev = document.getElementById('qrTextPreview');
                    if (prev && firstPayload) {
                        prev.value = firstPayload.replace(/\n$/, '');
                    }

                    setBtnState(true);
                } catch (err) {
                    console.error('[MixQR] generate error:', err);
                    if (window.Swal && Swal.fire) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error generating labels',
                            text: err && err.message ? err.message : String(err)
                        });
                    } else {
                        alert('Error generating labels: ' + (err && err.message ? err.message : err));
                    }
                }
            }

            async function handleDownloadClick(e) {
                e.preventDefault();
                e.stopPropagation();

                try {
                    var imgs = getLabelImages();
                    if (!imgs.length) {
                        alert('Nothing to download');
                        return;
                    }

                    if (imgs.length === 1) {
                        var single = imgs[0];
                        var data = await imgToDataURL(single);
                        var bag = single.dataset.bag || '1';
                        triggerDownload(data, 'sintergy-label-bag-' + bag + '.png');
                        return;
                    }

                    for (var i = 0; i < imgs.length; i++) {
                        var im = imgs[i];
                        var d = await imgToDataURL(im);
                        var bagNo = im.dataset.bag || (i + 1);
                        triggerDownload(d, 'sintergy-label-bag-' + bagNo + '.png');
                    }
                } catch (err) {
                    console.error('[mixqr] download error', err);
                    alert('Download failed: ' + (err && err.message ? err.message : err));
                }
            }

            async function handlePrintClick(e) {
                e.preventDefault();
                e.stopPropagation();

                var imgs = getLabelImages();
                if (!imgs.length) {
                    alert('Nothing to print');
                    return;
                }

                var w = window.open('', '_blank');
                if (!w) {
                    alert('Pop-up blocked. Allow pop-ups to print.');
                    return;
                }

                try {
                    // Prepare blank doc safely (no document.write string)
                    var doc = w.document;
                    doc.open();
                    doc.close();

                    doc.title = 'Print Labels';
                    var body = doc.body || doc.getElementsByTagName('body')[0];
                    if (!body) {
                        body = doc.createElement('body');
                        doc.appendChild(body);
                    }
                    body.style.margin = '16px';
                    body.style.textAlign = 'center';

                    var urls = [];
                    for (var i = 0; i < imgs.length; i++) {
                        urls.push(await imgToDataURL(imgs[i]));
                    }

                    for (var j = 0; j < urls.length; j++) {
                        var imgEl = doc.createElement('img');
                        imgEl.src = urls[j];
                        imgEl.style.width = '360px';
                        imgEl.style.height = 'auto';
                        imgEl.style.display = 'inline-block';
                        imgEl.style.margin = '8px';
                        body.appendChild(imgEl);
                    }

                    setTimeout(function () {
                        try {
                            w.focus();
                            w.print();
                        } catch (err2) {
                            console.error('[mixqr] print call error', err2);
                        }
                    }, 150);
                } catch (err) {
                    console.error('[mixqr] print error', err);
                    try { w.close(); } catch (e2) { }
                    alert('Print failed: ' + (err && err.message ? err.message : err));
                }
            }

            // ---------- Wiring ----------
            document.addEventListener('DOMContentLoaded', function () {
                if (!window.QRCode) {
                    console.error('[MixQR] QRCode not found. Check qrcode.min.js.');
                    if (window.Swal && Swal.fire) {
                        Swal.fire({
                            icon: 'error',
                            title: 'QR library missing',
                            text: 'qrcode.min.js did not load. Make sure it is included before this script.'
                        });
                    }
                }

                var modal = document.getElementById('createMixQrModal');
                if (modal) {
                    modal.addEventListener('shown.bs.modal', function () {
                        clearPreview();
                        var startBag = document.getElementById('startBagNo');
                        if (startBag && !startBag.value) startBag.value = 1;
                        var mixInput = document.getElementById('mixCode');
                        if (mixInput) mixInput.focus();
                    });
                    modal.addEventListener('hidden.bs.modal', window.__cleanBackdrops || function () { });
                }

                var btnGen = document.getElementById('btnGenerateQr');
                if (btnGen) btnGen.addEventListener('click', handleGenerateClick);

                var btnDownload = document.getElementById('btnDownloadQr');
                if (btnDownload) btnDownload.addEventListener('click', handleDownloadClick);

                var btnPrint = document.getElementById('btnPrintQr');
                if (btnPrint) btnPrint.addEventListener('click', handlePrintClick);
            });
        })();
    </script>


