@model DashboardReportApp.Models.ScheduleViewModel

<h2>Schedule Parts</h2>

<!-- Success and Error Messages -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<!-- Query Form -->
<form asp-action="Index" method="get">
    <div class="form-group">
        <label for="masterId">Part Number</label>
        <input type="text" id="masterId" name="masterId" class="form-control" placeholder="Enter Part Number" />
    </div>
    <div class="form-group">
        <label for="quantity">Quantity</label>
        <input type="number" id="quantity" name="quantity" class="form-control" placeholder="Enter Quantity" />
    </div>
    <button type="submit" class="btn btn-primary">Query</button>
</form>

<!-- Query Results -->
<h2>View Parts, Components and Subcomponents</h2>

@if (Model.AllComponents != null && Model.AllComponents.Any())
{
    <form asp-action="ScheduleComponents" method="post">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Master ID</th>
                    <th>Component</th>
                    <th>Subcomponent</th>
                    <th>Quantity to Make Master ID</th>
                    <th>Quantity to Schedule</th>
                    <th>Run</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.AllComponents.Count; i++)
                {
                    <tr>
                        <td>
                            <input type="hidden" name="AllComponents[@i].MasterId" value="@Model.AllComponents[i].MasterId" />
                            @Model.AllComponents[i].MasterId
                        </td>
                        <td>
                            <input type="hidden" name="AllComponents[@i].Component" value="@Model.AllComponents[i].Component" />
                            @Model.AllComponents[i].Component
                        </td>
                        <td>
                            <input type="hidden" name="AllComponents[@i].SubComponent" value="@(Model.AllComponents[i].SubComponent ?? "")" />
                            @(Model.AllComponents[i].SubComponent ?? "")
                        </td>
                        <td>
                            <input type="hidden" name="AllComponents[@i].QtyToMakeMasterID" value="@Model.AllComponents[i].QtyToMakeMasterID" />
                            @Model.AllComponents[i].QtyToMakeMasterID
                        </td>
                        <td>
                            <input type="number" name="AllComponents[@i].QtyToSchedule" value="@Model.AllComponents[i].QtyToSchedule" class="form-control" />
                        </td>
                        <td>
                            <input type="hidden" name="AllComponents[@i].Run" value="@Model.AllComponents[i].Run" />
                            @Model.AllComponents[i].Run
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="submit" class="btn btn-primary">Schedule</button>
    </form>

}
else
{
    <p>No components found for the given part number and quantity.</p>
}

<h3>Parts Scheduled</h3>

@if (Model.OpenParts == null || !Model.OpenParts.Any())
{
    <p>No open parts found.</p>
}
else
{
    <form asp-action="UpdateOpenParts" method="post">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Part</th>
                    <th>Component</th>
                    <th>Subcomponent</th>
                    <th>Quantity</th>
                    <th>Run</th>
                    <th>Open</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.OpenParts.Count; i++)
                {
                    <tr>
                        <td>
                            <input type="date" name="OpenParts[@i].Date" value="@Model.OpenParts[i].Date?.ToString("yyyy-MM-dd")" class="form-control" />
                        </td>
                        <td>
                            <input type="text" name="OpenParts[@i].MasterId" value="@Model.OpenParts[i].MasterId" class="form-control" />
                        </td>
                        <td>
                            <input type="text" name="OpenParts[@i].Component" value="@Model.OpenParts[i].Component" class="form-control" />
                        </td>
                        <td>
                            <input type="text" name="OpenParts[@i].SubComponent" value="@(Model.OpenParts[i].SubComponent ?? "")" class="form-control" />
                        </td>
                        <td>
                            <input type="number" name="OpenParts[@i].QtyToSchedule" value="@Model.OpenParts[i].QtyToSchedule" class="form-control" />
                        </td>
                        <td>
                            <input type="text" name="OpenParts[@i].Run" value="@Model.OpenParts[i].Run" class="form-control" />
                        </td>
                        <td>
                            <select name="OpenParts[@i].Open" class="form-control">
                                @if (Model.OpenParts[i].Open == 1)
                                {
                                    <option value="1" selected>Yes</option>
                                    <option value="0">No</option>
                                }
                                else
                                {
                                    <option value="1">Yes</option>
                                    <option value="0" selected>No</option>
                                }
                            </select>





                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="submit" class="btn btn-primary">Update Open Parts</button>
    </form>
}
