@model DashboardReportApp.Models.PressRunLogViewModel
<div class="container mt-1">
<h1>Press Run Log</h1>
<!-- Login Form -->
<h2>Login</h2>
<form method="post" action="/PressRunLog/Login">
    <label for="Operator">Operator</label>
    <select id="Operator" name="operatorName" required>
        <option value="">Select an Operator</option>
        @foreach (var operatorName in Model.OperatorList)
        {
            <option value="@operatorName">@operatorName</option>
        }
    </select>

    <label for="Part">Part</label>
    <input type="text" id="Part" name="part" required />

    <label for="Machine">Machine</label>
    <select id="Machine" name="machine" required>
        <option value="">Select a Machine</option>
        @foreach (var machine in Model.EquipmentList)
        {
            <option value="@machine">@machine</option>
        }
    </select>

    <button type="submit"<button type="submit" class="btn btn-primary mt-3">Login</button>
</form>

<!-- Logged-In Runs -->
<h2>Logged-In Runs</h2>
<table>
    <thead>
        <tr>
            <th>Operator</th>
            <th>Machine</th>
            <th>Part</th>
            <th>Start DateTime</th>
            <th>Logout</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var run in Model.LoggedInRuns)
        {
            <tr>
                <td>@run.Operator</td>
                <td>@run.Machine</td>
                <td>@run.Part</td>
                <td>@run.StartDateTime</td>
                <td>
                    <form method="post" action="/PressRunLog/Logout">
                        <input type="hidden" name="part" value="@run.Part" />
                        <input type="hidden" name="startDateTime" value="@run.StartDateTime.ToString("yyyy-MM-ddTHH:mm:ss")" />
                        <input type="hidden" name="endDateTime" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm:ss")" />

                        <label for="scrap">Scrap:</label>
                        <input type="number" id="scrap" name="scrap" required />

                        <label for="notes">Notes:</label>
                        <textarea id="notes" name="notes"></textarea>

                        <button type="submit" class="btn btn-primary mt-3">Logout</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
</div>