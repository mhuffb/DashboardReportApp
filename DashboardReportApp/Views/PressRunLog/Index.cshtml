                                        <button class="btn btn-info btn-sm"
                                                onclick="openStartSkidModal('@rec.Id', '@rec.Machine', '@rec.Part', '@rec.Component', '@rec.Operator', '@rec.Run', '@rec.ProdNumber')">
                                            Start Skid
