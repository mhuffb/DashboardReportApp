@model DashboardReportApp.Models.PressRunLogViewModel
@using System.Linq

<h2>Logged-In Runs</h2>

@if (Model.LoggedInRuns != null && Model.LoggedInRuns.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Operator</th>
                <th>Machine</th>
                <th>Part</th>
                <th>Start Time</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var runItem in Model.LoggedInRuns)
            {
                <tr>
                    <td>@runItem.Operator</td>
                    <td>@runItem.Machine</td>
                    <td>@runItem.Part</td>
                    <td>@runItem.StartDateTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>
                        <form asp-action="Logout" method="post">
                            <input type="hidden" name="Part" value="@runItem.Part" />
                            <input type="hidden" name="StartDateTime" value="@runItem.StartDateTime.ToString("o")" />

                            <div>
                                <label for="PcsEnd">Pieces End</label>
                                <input type="number" id="PcsEnd" name="PcsEnd" required />
                            </div>

                            <div>
                                <label for="Scrap">Scrap</label>
                                <input type="number" id="Scrap" name="Scrap" required />
                            </div>

                            <button type="submit" class="btn btn-danger">Logout</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No logged-in runs found.</p>
}

<hr />

<h2>Login</h2>

<form asp-action="Login" method="post">
    <div>
        <label for="Operator">Operator</label>
        <select id="Operator" name="Operator" required>
            <option value="" disabled selected>Select an operator</option>
            @foreach (var op in Model.OperatorList)
            {
                <option value="@op">@op</option>
            }
        </select>
    </div>

    <div>
        <label for="Machine">Machine</label>
        <select id="Machine" name="Machine" required>
            <option value="" disabled selected>Select a machine</option>
            @foreach (var mach in Model.EquipmentList)
            {
                <option value="@mach">@mach</option>
            }
        </select>
    </div>

    <div>
        <label for="Part">Part</label>
        <input type="text" id="Part" name="Part" required />
    </div>

    <div>
        <label for="PcsStart">Pieces Start</label>
        <input type="number" id="PcsStart" name="PcsStart" required />
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>
