                                <th>Prod Number</th>
                                <th>Run</th>
                                <th>Mix Lot</th>       
                                <th>Mix Code</th>
                                <th>Start Time</th>
                                <th>Operator</th>
                                <th>Machine</th>
                                <th>Part</th>
                                <th>Component</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var rec in mainRuns)
                            {
                                <tr>
                                    <td>@rec.Id</td>
                                    <td>@rec.ProdNumber</td>
                                    <td>@rec.Run</td>
                                    <td>@rec.LotNumber</td>      
                                    <td>@rec.MaterialCode</td>
                                    <td>@(rec.StartDateTime?.ToString("yyyy-MM-dd HH:mm") ?? "N/A")</td>
                                    <td>@rec.Operator</td>
                                    <td>@rec.Machine</td>
                                    <td>@rec.Part</td>
                                    <td>@rec.Component</td>
                                    <td>
