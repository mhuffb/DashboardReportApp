@model List<DashboardReportApp.Models.ToolItemViewModel>

@if (Model == null || Model.Count == 0)
{
    <div class="text-muted fst-italic">No tool items yet.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-sm table-bordered mb-0">
            <thead class="table-light">
                <tr>
                    <th style="width:140px">Action</th>
                    <th style="width:170px">Item</th>
                    <th style="width:140px">Tool #</th>
                    <th>Description</th>
                    <th style="width:70px">Rev</th>
                    <th style="width:80px">Qty</th>
                    <th style="width:120px">Cost</th>
                    <th style="width:100px">Hours</th>
                    <th class="text-end" style="width:100px">Delete</th> @* NEW *@
                </tr>
            </thead>
            <tbody>
                @foreach (var it in Model)
                {
                    <tr data-item-id="@it.Id" data-group-id="@it.GroupID">
                        <td>@it.Action</td>
                        <td>@it.ToolItem</td>
                        <td>@it.ToolNumber</td>
                        <td>@it.ToolDesc</td>
                        <td>@it.Revision</td>
                        <td>@(it.Quantity == 0 ? "" : it.Quantity.ToString())</td>
                        <td>@(it.Cost?.ToString("0.00"))</td>
                        <td>@(it.ToolWorkHours?.ToString())</td>
                        <td class="text-end">
                            <button type="button" class="btn btn-sm btn-outline-danger"
                                    data-action="delete-tool-item">
                                Delete
                            </button>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
