    body {
        background-color: black !important;
        color: goldenrod !important;
    }

    .card {
        background-color: black !important;
        color: goldenrod !important;
        border: 1px solid goldenrod;
    }

    .table {
        color: goldenrod !important;
        background-color: black !important;
    }

        .table th, .table td {
            border-color: goldenrod !important;
        }

    .table-dark {
        background-color: black !important;
        color: goldenrod !important;
    }

    .form-control {
        background-color: black !important;
        color: goldenrod !important;
        border: 1px solid goldenrod !important;
    }

        .form-control::placeholder {
            color: goldenrod !important;
        }

