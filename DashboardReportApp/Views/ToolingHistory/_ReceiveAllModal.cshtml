@{
    var groupId = (int)ViewBag.GroupID;
    var recvFit = (ViewBag.PeopleRecvFit as string[]) ?? new[] { "Shuckers, C", "Klebecha, B" };
    var today = DateTime.Today.ToString("yyyy-MM-dd");
    var defaultReceiver = "Shuckers, C";
}
<div class="modal-header">
    <h5 class="modal-title">Receive All — Group @groupId</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<form id="receiveAllForm" method="post" asp-action="SaveAllToolItemsAjax">
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <input type="hidden" name="GroupID" value="@groupId" />
        <div class="row g-2">
            <div class="col-md-4">
                <label class="form-label">Recv Date</label>
                <input type="date" class="form-control" name="__bulkDateReceived" value="@today" />
            </div>
            <div class="col-md-4">
                <label class="form-label">Received By</label>
                <select class="form-select" name="__bulkReceivedBy">
                    @foreach (var p in recvFit)
                    {
                        if (string.Equals(p, defaultReceiver, StringComparison.OrdinalIgnoreCase))
                        {
                            <option value="@p" selected>@p</option>
                        }
                        else
                        {
                            <option value="@p">@p</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="alsoFit" name="__alsoFit" checked />
                    <label class="form-check-label" for="alsoFit">Also mark as Fitted</label>
                </div>
            </div>
        </div>
        <small class="text-muted">Applies to every tool item in the group.</small>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-success">Apply</button>
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
    </div>
</form>
