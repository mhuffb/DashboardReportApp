@model int
@* model = groupID *@

<div class="modal-header">
    <h5 class="modal-title">Receive All — Group @Model</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form id="receiveAllForm" asp-action="ReceiveAll" asp-controller="ToolingHistory" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="groupID" value="@Model" />

    <div class="modal-body">
        <div class="mb-3">
            <label class="form-label">Received By</label>
            <select class="form-select" name="receivedBy" required>
                <option value="Shuckers, C">Shuckers, C</option>
                <option value="Klebecha, B">Klebecha, B</option>
            </select>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="alsoFit" name="alsoFit" value="true" checked />
            <label class="form-check-label" for="alsoFit">Also fit all items now (use same name)</label>
        </div>
        <!-- Hidden “false” so model binding works when unchecked -->
        <input type="hidden" name="alsoFit" value="false" />
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-success">Receive All</button>
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
    </div>
</form>
