@model DashboardReportApp.Models.GroupDetailsViewModel

<div class="modal-header">
    <h5 class="modal-title">Fit All (Group @Model.GroupID)</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form id="fitAllForm" asp-action="FitAll" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="groupID" value="@Model.GroupID" />
    <div class="modal-body">
        <div class="mb-3">
            <label class="form-label">Fitted By</label>
            <select name="fittedBy" class="form-select" required>
                <option value="Shuckers, C">Shuckers, C</option>
                <option value="Klebecha, B">Klebecha, B</option>
            </select>
        </div>
        <div class="text-muted">
            Sets <strong>FittedBy</strong> and <strong>DateFitted</strong> to today on all items in the group.
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Confirm</button>
    </div>
</form>
