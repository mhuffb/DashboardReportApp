@using Microsoft.AspNetCore.Mvc.Rendering
@model DashboardReportApp.Models.CompleteWorkOrderVM
@{
    var receivedList = ViewBag.ReceivedByList as List<string> ?? new List<string>();
}

<div class="modal-header">
    <h5 class="modal-title">Complete Work Order — @Model.GroupID</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form id="toolWorkOrderForm"
      asp-action="CompleteWorkOrder"
      asp-controller="ToolingWorkOrder"
      method="post">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.GroupID)

    <div class="modal-body">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Date Received / Date Work Completed</label>
                @Html.TextBoxFor(m => m.DateReceived, "{0:yyyy-MM-dd}",
                new { @class = "form-control", type = "date" })

                @Html.ValidationMessageFor(m => m.DateReceived, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-6">
                <label class="form-label">Received / Completed By</label>
                <select asp-for="Received_CompletedBy"
                        class="form-select"
                        asp-items="@(new SelectList(receivedList, Model.Received_CompletedBy))">
                </select>
                @Html.ValidationMessageFor(m => m.Received_CompletedBy, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-success">Mark Complete</button>
    </div>
</form>
